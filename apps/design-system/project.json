{
  "name": "design-system",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/design-system/src",
  "projectType": "application",
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/design-system/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "serve": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "port": 4400,
        "configDir": "apps/design-system/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@nx/storybook:build",
      "outputs": ["{options.outputDir}"],
      "options": {
        "configDir": "apps/design-system/.storybook",
        "outputDir": "dist/storybook/design-system"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "ctest": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ELECTRON_EXTRA_LAUNCH_ARGS=--remote-debugging-port=9222 npx nx e2e design-system"
      }
    },
    "e2e": {
      "executor": "@nx/cypress:cypress",
      "options": {
        "cypressConfig": "apps/design-system/cypress.config.ts",
        "testingType": "e2e",
        "devServerTarget": "design-system:serve"
      }
    }
  },
  "tags": []
}
